doctype transitional

include ../components

block variables

html(
  lang="ru",
  xmlns="http://www.w3.org/1999/xhtml",
  xmlns:v="urn:schemas-microsoft-com:vml",
  xmlns:o="urn:schemas-microsoft-com:office:office"
)
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="x-apple-disable-message-reformatting")
    meta(name="format-detection", content="telephone=no, address=no, email=no, date=no, url=no")
    // The title tag shows in email notifications, like Android 4.4.
    title= title

    // Fix the DPI Scaling Issue
    <!--[if mso ]>
      <xml>
        <o:OfficeDocumentSettings>
          <o:AllowPNG/>
          <o:PixelsPerInch>96</o:PixelsPerInch>
        </o:OfficeDocumentSettings>
      </xml>
    <![endif]-->

    // Desktop Outlook chokes on web font references and defaults to Times New Roman, so we force a safe fallback font.
    <!--[if mso | IE]><style type="text/css">*{font-family: sans-serif !important}</style><![endif]-->

    // кастомные шрифты
    <!--[if !mso]><!-->
    link(href="https://fonts.googleapis.com", rel="preconnect")
    link(href="https://fonts.gstatic.com", rel="preconnect", crossorigin="anonymous")
    link(href="https://fonts.googleapis.com/css2?family=Inter:wght@500;700&display=swap", rel="stylesheet", type="text/css")

    styleForStyleTag(type="text/css") @import url("https://fonts.googleapis.com/css2?family=Inter:wght@500;700&display=swap");
    <!--<![endif]-->

    style(type="text/css")
      include ../../../../build/css/styleForInline.css
    styleForStyleTag(type="text/css")
      include ../../../../build/css/styleForStyleTag.css

  body
    center
      <!--[if mso | IE]>
      <table width="100%" cellspacing="0" cellpadding="0" border="0" bgcolor="#f5f5f5">
      <tr>
      <td align="center" style="padding: 28px;">
      <![endif]-->

      // Visually Hidden Preheader Text : BEGIN
      .preheader= description
      // Visually Hidden Preheader Text : END

      // Create white space after the desired preview text so email clients don’t pull other distracting text into the inbox preview. Extend as necessary.
      // Preview Text Spacing Hack : BEGIN
      .preheader-text-spacing
      // Preview Text Spacing Hack : END

      .email-container
        <!--[if mso | IE]>
        <table width="600" align="center" cellspacing="0" cellpadding="0" border="0" bgcolor="#ffffff">
        <tr>
        <td align="center">
        <![endif]-->

        // Header : BEGIN
        block header
          +header()
        // Header : END

        // Body : BEGIN
        block main
        // Body : END

        // Footer : BEGIN
        block footer
          +footer()
        // Footer : END

        <!--[if mso | IE]>
        </td>
        </tr>
        </table>
        <![endif]-->
